
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
        <div class="panel-body">
        <%= pin.description %><br/>
        <div class="pin-avatar"><%= image_tag(pin.user.profile_pic.url(:thumb)) if pin.user %></div> <div class="pin-username"><%= pin.user.name if pin.user %></div>
        </div>
        <% if pin.user == current_user %>
          <div class="panel-footer">
            <%= link_to 'Edit', edit_pin_path(pin) , class: 'btn btn-xs btn-warning'%> 
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-xs btn-danger'%>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<center><%= will_paginate @pins, renderer: BootstrapPagination::Rails %></center>

